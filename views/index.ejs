<!DOCTYPE html>

<head>
  <title>Project</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</head>

<body>
  <div style="margin:50px;">
    <div class="jumbotron container">
      <div class="row row-no-gutters">
        <div>
          <h2 style="padding-left: 14px;">Blizzard Auction Load</h2>
        </div>
        <div class="col-md-4 .col-md-offset-3">
          <a href="/sort"><button class="btn btn-primary btn-md" name="itemid" role="button">Sort by Item
              ID</button></a>
          <a href="/sort"> <button class="btn btn-primary btn-md" name="quantity" role="button">Sort by
              Quantity</button></a>
          <a href="/sort"><button class="btn btn-primary btn-md" name="nameVal" role="button">Sort by Name</button></a>
          
          <a href="/greport"> <button class="btn btn-primary btn-md" type="button">Generate Report</button></a>

        </div>
        <div class="col-md-4 .col-md-offset-3">
          <form class="form-group" action="/search" method="GET">
            <input name="searchid" type="text" />
            <button class="btn btn-primary btn-md" type="submit">Search</button>
          </form>
        </div>
      </div>

      <table class="table">
        <tr>
          <th scope="col">Item ID</th>
          <th scope="col">Quantity</th>
          <th scope="col">Time left</th>
          <th scope="col">Name</th>
        </tr>
        <% parsedData.forEach(function(parsed) { %>
          <tr>
            <td>
              <%= parsed.itemid %>
            </td>
            <td>
              <%= parsed.quantity %>
            </td>
            <td>
              <%= parsed.time_left %>
            </td>
            <td>
              <%= unescape(parsed.typename) %>
            </td>
          </tr>
          <% }); %>
      </table>
    </div>
  </div>
</body>

</html>